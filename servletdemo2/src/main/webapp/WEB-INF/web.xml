<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">


  <!--测试接口-->
  <!--用来注册Servlet的实现类-->
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>HelloServlet</servlet-class>
  </servlet>
  <!--用来注册Servlet的接口-->
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>


  <!--计算器接口-->
  <!--用来注册Servlet的实现类-->
  <servlet>
    <servlet-name>calcname</servlet-name>
    <servlet-class>CalcServlet</servlet-class>
  </servlet>
  <!--用来注册Servlet的接口-->
  <servlet-mapping>
    <servlet-name>calcname</servlet-name>
    <url-pattern>/calc</url-pattern>
  </servlet-mapping>


  <!--定时刷新器接口-->
  <!--用来注册Servlet的实现类-->
  <servlet>
    <servlet-name>refresh</servlet-name>
    <servlet-class>RefreshServlet</servlet-class>
  </servlet>
  <!--用来注册Servlet的接口-->
  <servlet-mapping>
    <servlet-name>refresh</servlet-name>
    <url-pattern>/ref</url-pattern>
  </servlet-mapping>


  <!--request常用信息-->
  <!--用来注册Servlet的实现类-->
  <servlet>
    <servlet-name>myrequest</servlet-name>
    <servlet-class>MyRequestServlet</servlet-class>
  </servlet>
  <!--用来注册Servlet的接口-->
  <servlet-mapping>
    <servlet-name>myrequest</servlet-name>
    <url-pattern>/req</url-pattern>
  </servlet-mapping>


  <!--跳转-->
  <!--用来注册Servlet的实现类-->
  <servlet>
    <servlet-name>location</servlet-name>
    <servlet-class>LocationServlet</servlet-class>
  </servlet>
  <!--用来注册Servlet的接口-->
  <servlet-mapping>
    <servlet-name>location</servlet-name>
    <url-pattern>/local</url-pattern>
  </servlet-mapping>
</web-app>